---
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Creating the future of affordable online learning for all."
    />
    <meta name="og:title" content="Diipone Academy" />
    <meta name="og:type" content="website" />
    <meta name="og:description" content="Creating the future of affordable online learning for all." />
    <meta property="og:image" content="https://www.diiponeacademy.co.za/assets/images/og-image.jpg" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <GoogleFontsOptimizer
      url="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap"
    />
  </head>
  <body>
    <slot />
  </body>
</html>
